<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/topLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
        
        <ImageView
            android:id="@+id/main_history_ic"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="0.33"
            android:background="@drawable/linearlayout_selector"
            android:focusable="true"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:src="@drawable/history_ic"
            android:visibility="visible" />
        
        <ImageView
            android:id="@+id/main_dialer_ic"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.33"
            android:background="@drawable/linearlayout_selector"
            android:focusable="true"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:src="@drawable/dialer_ic"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/main_contact_ic"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="0.33"
            android:background="@drawable/linearlayout_selector"
            android:focusable="true"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:src="@drawable/contacts_ic"
            android:visibility="visible" />

</LinearLayout>
    